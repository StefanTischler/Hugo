<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.tugraz.mobilforum"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <supports-screens 
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="false"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
    
        <activity
            android:name="at.tugraz.mobilforum.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name="at.tugraz.mobilforum.LoginActivity" 
           				 android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.RegisterAvatarActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name="at.tugraz.mobilforum.RegisterActivity" 
            android:screenOrientation="portrait">
          </activity>
        
        <activity android:name="at.tugraz.mobilforum.PostEntryActivity" 
            android:screenOrientation="portrait">
          </activity>
        
        <activity android:name="at.tugraz.mobilforum.TopicPostActivity" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.TopicListActivity"
            android:label="@string/title_activity_topic_list" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.AndroidDialog"
			android:label="@string/title_activity_topic_list" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.TopicListActivityNew"
            android:label="@string/title_activity_topic_list_activity_new" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.FragmentActivity"
            android:label="@string/title_activity_fragment"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.SwipeActivity"
            android:label="@string/title_activity_swipe" 
            android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.ReadTopicsActivity"
            android:label="@string/title_activity_read_topics" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="at.tugraz.mobilforum.ReadEntriesActivity"
            android:label="@string/title_activity_read_entries"
            android:screenOrientation="portrait" >
        </activity>
    
    </application>

</manifest>


  
